<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Lumino.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="44"
             x:Class="Lumino.Views.Controls.PlaybackToolbar"
             x:DataType="vm:PlaybackViewModel">

	<Design.DataContext>
		<vm:PlaybackViewModel/>
	</Design.DataContext>

	<UserControl.Styles>
		<!-- 工具栏按钮样式 -->
		<Style Selector="Button.PlaybackButton">
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Margin" Value="2"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
			<Setter Property="CornerRadius" Value="4"/>
		</Style>

		<Style Selector="Button.PlaybackButton:pointerover">
			<Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ButtonActiveBrush}"/>
		</Style>

		<Style Selector="Button.PlaybackButton:pressed">
			<Setter Property="Background" Value="{DynamicResource ButtonPressedBrush}"/>
		</Style>

		<Style Selector="Button.PlaybackButton.active">
			<Setter Property="Background" Value="{DynamicResource ButtonActiveBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource SliderThumbPressedBrush}"/>
		</Style>

		<Style Selector="TextBlock.PlaybackLabel">
			<Setter Property="FontSize" Value="11"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Foreground" Value="{DynamicResource StatusTextBrush}"/>
		</Style>
	</UserControl.Styles>

	<!-- 播放工具栏 -->
	<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
		<!-- 播放按钮 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding PlayCommand}"
		        ToolTip.Tip="播放 (Space)"
		        IsEnabled="{Binding !IsPlaying}">
			<TextBlock Text="▶" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
		</Button>

		<!-- 暂停按钮 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding PauseCommand}"
		        ToolTip.Tip="暂停 (Space)"
		        IsEnabled="{Binding IsPlaying}">
			<TextBlock Text="⏸" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
		</Button>

		<!-- 停止按钮 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding StopCommand}"
		        ToolTip.Tip="停止 (Ctrl+S)">
			<TextBlock Text="⏹" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
		</Button>

		<!-- 分隔线 -->
		<Rectangle Width="1" Height="24" Fill="{DynamicResource ButtonBorderBrush}"/>

		<!-- 当前时间 -->
		<TextBlock Classes="PlaybackLabel" 
		           Text="{Binding CurrentTimeDisplay}"
		           MinWidth="60"
		           TextAlignment="Right"
		           Margin="4,0"/>

		<!-- 分隔线 -->
		<Rectangle Width="1" Height="24" Fill="{DynamicResource ButtonBorderBrush}"/>

		<!-- 总时长 -->
		<TextBlock Classes="PlaybackLabel"
		           Text="{Binding TotalDurationDisplay}"
		           MinWidth="60"
		           TextAlignment="Right"
		           Margin="4,0"/>

		<!-- 分隔线 -->
		<Rectangle Width="1" Height="24" Fill="{DynamicResource ButtonBorderBrush}"/>

		<!-- 速度减少 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding DecreaseSpeedCommand}"
		        ToolTip.Tip="减速 (-)"
		        Padding="2">
			<TextBlock Text="-" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
		</Button>

		<!-- 速度显示 -->
		<TextBlock Classes="PlaybackLabel"
		           MinWidth="35"
		           TextAlignment="Center"
		           Margin="2,0"
		           Text="{Binding PlaybackSpeed, StringFormat={}{0:F2}x}"/>

		<!-- 速度增加 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding IncreaseSpeedCommand}"
		        ToolTip.Tip="加速 (+)"
		        Padding="2">
			<TextBlock Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
		</Button>

		<!-- 速度重置 -->
		<Button Classes="PlaybackButton"
		        Command="{Binding ResetSpeedCommand}"
		        ToolTip.Tip="重置速度 (Ctrl+R)">
			<TextBlock Text="1x" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
		</Button>

		<!-- 分隔线 -->
		<Rectangle Width="1" Height="24" Fill="{DynamicResource ButtonBorderBrush}"/>

		<!-- 活跃音符数 -->
		<TextBlock Classes="PlaybackLabel"
		           Text="{Binding ActiveNoteCount, StringFormat='音符: {0}'}"
		           Margin="4,0"/>
	</StackPanel>
</UserControl>
