<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="650"
        x:Class="Lumino.Views.ImageToMidiView"
        Title="图片转MIDI工具">

    <Grid Background="#FF263238">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#FF37474F" Height="50" Margin="0,0,0,10">
            <DockPanel Margin="10,0">
                <TextBlock Text="图片转MIDI工具" VerticalAlignment="Center"
                           FontSize="20" FontWeight="SemiBold" Foreground="White">
                </TextBlock>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button x:Name="CloseButton" Content="✕" Width="24" Height="24"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" Click="CloseButton_Click">
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧控制面板 -->
            <Border Grid.Column="0" Background="#FF37474F" Margin="10"
                    CornerRadius="8" BorderBrush="#FF424242" BorderThickness="1">
                <StackPanel Margin="15" Spacing="15">
                    <TextBlock Text="图像设置" FontSize="16" FontWeight="SemiBold"
                               Foreground="White" Margin="0,0,0,10">
                    </TextBlock>

                    <Button x:Name="LoadImageButton" Content="加载图片"
                            Command="{Binding LoadImageCommand}"
                            Background="#FF673AB7" Foreground="White"
                            CornerRadius="4" Height="36">
                    </Button>

                    <Button x:Name="ConvertButton" Content="开始转换"
                            Command="{Binding ConvertCommand}"
                            Background="#FF7E57C2" Foreground="White"
                            CornerRadius="4" Height="36"
                            IsEnabled="{Binding CurrentImage}">
                    </Button>

                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12" Foreground="#FF9E9E9E"
                               TextWrapping="Wrap" Margin="0,10,0,0"
                               IsVisible="{Binding ShouldShowStatusMessage}">
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 中间预览区域 -->
            <Border Grid.Column="1" Background="#FF37474F" Margin="10"
                    CornerRadius="8" BorderBrush="#FF424242" BorderThickness="1">
                <StackPanel Margin="20" Spacing="15">
                    <TextBlock Text="图像预览" FontSize="16" FontWeight="SemiBold"
                               Foreground="White" Margin="0,0,0,10">
                    </TextBlock>

                    <Border Background="#FF1E1E1E" CornerRadius="4" MinHeight="300"
                            BorderBrush="#FF424242" BorderThickness="1">
                        <Grid>
                            <TextBlock Text="请加载一张图片" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="#FF9E9E9E" FontSize="14"
                                       IsVisible="{Binding !CurrentImage}">
                            </TextBlock>
                            <Image Source="{Binding CurrentImage}" Stretch="Uniform"
                                   MaxHeight="400" MaxWidth="600"
                                   IsVisible="{Binding CurrentImage}">
                            </Image>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 右侧设置面板 -->
            <Border Grid.Column="2" Background="#FF37474F" Margin="10"
                    CornerRadius="8" BorderBrush="#FF424242" BorderThickness="1">
                <StackPanel Margin="15" Spacing="15">
                    <TextBlock Text="转换设置" FontSize="16" FontWeight="SemiBold"
                               Foreground="White" Margin="0,0,0,10">
                    </TextBlock>

                    <TextBlock Text="配置选项将在此显示" FontSize="12" Foreground="#FF9E9E9E"
                               TextWrapping="Wrap" HorizontalAlignment="Center">
                    </TextBlock>

                    <Button Content="关闭" Command="{Binding CloseCommand}"
                            Background="Transparent" Foreground="#FF9E9E9E"
                            BorderBrush="#FF9E9E9E" BorderThickness="1"
                            CornerRadius="4" Height="36">
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>